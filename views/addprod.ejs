</head>

<body>
    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>
    <h1>Add Products</h1>
    <div class="form">

        <form method="POST" action="/addprod" class="form">
            <div class="form-group">
                <label>Nom du Produit</label>
                <input placeholder="nom" name="nom" class="input" id="nom" type="text">
            </div>

            <div class="form-group">
                <label>Quantit√©</label>
                <input placeholder="quantite" min="1" name="quantite" class="input" id="prenom" type="number">
            </div>
            <div class="form-group">
                <label>Prix</label>
                <input placeholder="prix" min="0" name="prix" class="input" id="age" type="number">
            </div>

            <div class="form-group">
                <label>Fournisseur:</label>
                <select name="four" class="input">
                    <% fournisseurs.forEach(function (four) { %>

                    <option > <%= four.nomfour %> </option>
                    <% }) %>
                </select>
                <a class="but" href="/addfourn">Add Fournisseur</a>
            </div>

            <div class="form-group">
                <label>Categorie:</label>
                <select name="categ" class="input">
                    <% rayons.forEach(function (ray) { %>

                    <option> <%= ray.categorie %> </option>

                    <% }) %>
                </select>
                <a class="but" href="/addcat">Add Categorie</a>

            </div>


            <input class="but" type="submit" value="submit">

        </form>
        <a style="margin-top: 10px;" type="button" href="/"  class="but">Products</a>

        <br> <br>
    </div>






</body>

</html>